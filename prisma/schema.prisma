// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  username        String
  email           String
  password        String
  aplications     Application[]
  aplicationsPool ApplicationPool[]
}

model ApplicationPool {
  id              Int           @id @default(autoincrement())
  name            String
  ApplicationPool Application[]
  User            User?         @relation(fields: [userId], references: [id])
  userId          Int?
}

model Application {
  id                Int              @id @default(autoincrement())
  name              String           @unique
  description       String
  User              User?            @relation(fields: [userId], references: [id])
  userId            Int?
  ApplicationPool   ApplicationPool? @relation(fields: [applicationPoolId], references: [id])
  applicationPoolId Int?
}
